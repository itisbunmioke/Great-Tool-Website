---
const { title } = Astro.props;
const url = new URL(Astro.request.url).pathname;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>

	<body>
		<div class="py-8 bg-gray-200 min-h-screen">
			<nav class="flex justify-center space-x-10 pb-10">
				<a
					href="/"
					class={url === "/"
						? "hover:animate-bounce font-bold text-gray-500 hover:text-gray-900"
						: "hover:animate-bounce font-medium text-gray-500 hover:text-gray-900"}
					>ğŸ˜ Home
				</a>
				<a
					href="/pricing"
					class={url === "/pricing"
						? "hover:animate-bounce font-bold text-gray-500 hover:text-gray-900"
						: "hover:animate-bounce font-medium text-gray-500 hover:text-gray-900"}
					>ğŸ· Pricing
				</a>
				<a
					href="/blog"
					class={url === "/blog"
						? "hover:animate-bounce font-bold text-gray-500 hover:text-gray-900"
						: "hover:animate-bounce font-medium text-gray-500 hover:text-gray-900"}
					>ğŸ“š Blog
				</a>
				<a
					href="/login"
					class={url === "/login"
						? "hover:animate-bounce font-bold text-gray-500 hover:text-gray-900"
						: "hover:animate-bounce font-medium text-gray-500 hover:text-gray-900"}
					>ğŸ”‘ Login
				</a>
				<a
					href="/signup"
					class="font-medium text-white hover:bg-blue-600 bg-blue-500 p-2 -mt-2 rounded-lg"
					>ğŸ Sign up
				</a>
			</nav>

			<h1
				class="text-center text-3xl mb-10 font-extrabold tracking-tight text-gray-900"
			>
				{title}
			</h1>

			<div class="mt-20 mx-auto text-center max-w-3xl px-10">
				<slot />
			</div>

			<footer class="mt-20 pt-12 border-t-2 border-gray-300">
				<nav class="flex justify-center pb-10 space-x-10">
					<a
						href="/"
						class="font-medium text-gray-500 hover:text-gray-900 hover:underline hover:underline-offset-4"
						>Home
					</a>
					<a
						href="#features"
						class="font-medium text-gray-500 hover:text-gray-900 hover:underline hover:underline-offset-4"
						>Features
					</a>
					<a
						href="/pricing"
						class="font-medium text-gray-500 hover:text-gray-900 hover:underline hover:underline-offset-4"
						>Pricing
					</a>
				</nav>
				<p class="text-center text-gray-400">
					&copy; 2022 Great Tool. All rights reserved.
				</p>
			</footer>
		</div>
	</body>
</html>
